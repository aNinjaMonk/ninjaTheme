{{!-- This is a partial file used to generate a post "card"
which templates loop over to generate a list of posts. --}}

  <article class="{{post_class}} mb-lg-5">
    <div class="row">
      <div class="col-lg-7 col-12 bg-transparent rounded-3">
        {{#if feature_image}}
          <img class="post_feature_image card-img-top h-auto w-100 post-image-border shadow"
              srcset="{{img_url feature_image size="s"}} 300w,
                      {{img_url feature_image size="m"}} 600w,
                      {{img_url feature_image size="l"}} 1000w,
                      {{img_url feature_image size="xl"}} 2000w"
              sizes="(max-width: 1000px) 400px, 800px"
              src="{{img_url feature_image size="l"}}"
              alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
              loading="lazy"
          />
        {{/if}}
      </div>
      <div class="col-lg-5 col-12 card-body p-4 p-lg-3 pb-1">
        <div>
          <a class="post-card-content-link text-black text-decoration-none pt-0" style="text-align: justify;" href="{{url}}#/portal">
            <header class="post-card-header">
              {{#if primary_tag}}
                  {{#primary_tag}}
                  <div class="post-card-primary-tag">{{name}}</div>
                  {{/primary_tag}}
              {{/if}}
              <div class="card-title text-start h2">
                <strong>{{title}}</strong>
              </div>
            </header>
            <p class="card-text post-card-description">{{excerpt}}</p>
            <i class="text-danger"><b>Read More &nbsp;&nbsp;  <span class="fa-solid fa-arrow-right-long" /></b></a></b></i>
          </a>